# -*- ruby -*-
$:.unshift File.join(File.dirname(__FILE__),"lib")
require 'rubygems'
require 'hoe'
require 'rplex'

Hoe.spec 'rplex' do |prj|
  developer('Vassilis Rizopoulos', 'var@zuehlke.com')
  prj.version=Rplex::Version::STRING
